<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iastate.edu.coms309.sb4.getit.client">
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".screens.entry.GettingStarted"></activity>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity android:name=".screens.admin.ManageAccounts"></activity>
        <activity android:name=".screens.admin.AdminPage" />
        <activity android:name=".screens.course.AddCourse" />
        <activity android:name=".screens.student.Rate" />
        <activity android:name=".screens.student.Notes" />
        <activity android:name=".screens.professor.ProfessorAttendance" />
        <activity android:name=".screens.student.StudentAttendance" />
        <activity android:name=".screens.course.SearchCourse" />
        <activity android:name=".screens.professor.ProfessorCourse" />
        <activity android:name=".screens.student.StudentCourse" />
        <activity android:name=".screens.course.CourseList" />
        <activity android:name=".screens.entry.CreateAccount" />
        <activity
            android:name=".screens.entry.Onboard"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".screens.entry.SplashScreen"
            android:label="@string/getit"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>